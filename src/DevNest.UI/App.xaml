<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="DevNest.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevNest.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>

            <!--  Custom Color Overrides  -->
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <!--  Override colors for Light theme  -->
                    <Color x:Key="SystemAccentColor">#FF0078D4</Color>
                    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#FFFFFFFF" />
                    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FF000000" />
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#FFF3F3F3" />

                    <!--  Custom brand colors  -->
                    <Color x:Key="BrandPrimaryColor">#FF6200EA</Color>
                    <Color x:Key="BrandSecondaryColor">#FF03DAC6</Color>
                    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimaryColor}" />
                    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{StaticResource BrandSecondaryColor}" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <!--  Override colors for Dark theme  -->
                    <Color x:Key="SystemAccentColor">#FF0078D4</Color>
                    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#FF2D2D30" />
                    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FFFFFFFF" />
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#FF1E1E1E" />

                    <!--  Custom brand colors  -->
                    <Color x:Key="BrandPrimaryColor">#FF7C4DFF</Color>
                    <Color x:Key="BrandSecondaryColor">#FF18FFFF</Color>
                    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimaryColor}" />
                    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{StaticResource BrandSecondaryColor}" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="HighContrast">
                    <!--  Override colors for High Contrast theme  -->
                    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="{ThemeResource SystemColorWindowColor}" />
                    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="{ThemeResource SystemColorWindowTextColor}" />

                    <!--  Use system colors for High Contrast  -->
                    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{ThemeResource SystemColorHotlightColor}" />
                    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{ThemeResource SystemColorHighlightColor}" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!--  Other app resources here  -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
