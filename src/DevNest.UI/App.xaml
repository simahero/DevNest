<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="DevNest.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:DevNest.UI.Converters"
    xmlns:local="using:DevNest.UI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">

                    <SolidColorBrush x:Key="AccentTextFillColorPrimaryBrush" Color="#FF6200EA" />
                    <SolidColorBrush x:Key="AccentTextFillColorSecondaryBrush" Color="#FF6200EA" />
                    <!--  Override colors for Light theme  -->
                    <Color x:Key="SystemAccentColor">#FF0078D4</Color>
                    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#FFFFFFFF" />
                    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FF000000" />
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#FFF3F3F3" />

                    <!--  Custom brand colors  -->
                    <Color x:Key="BrandPrimaryColor">#FF6200EA</Color>
                    <Color x:Key="BrandSecondaryColor">#FF03DAC6</Color>
                    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimaryColor}" />
                    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{StaticResource BrandSecondaryColor}" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <!--  Override colors for Dark theme  -->
                    <Color x:Key="SystemAccentColor">#FF0078D4</Color>
                    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#FF2D2D30" />
                    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FFFFFFFF" />
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#FF1E1E1E" />

                    <!--  Custom brand colors  -->
                    <Color x:Key="BrandPrimaryColor">#FF7C4DFF</Color>
                    <Color x:Key="BrandSecondaryColor">#FF18FFFF</Color>
                    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimaryColor}" />
                    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{StaticResource BrandSecondaryColor}" />
                </ResourceDictionary>

                <ResourceDictionary x:Key="HighContrast">
                    <!--  Override colors for High Contrast theme  -->
                    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="{ThemeResource SystemColorWindowColor}" />
                    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="{ThemeResource SystemColorWindowTextColor}" />

                    <!--  Use system colors for High Contrast  -->
                    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{ThemeResource SystemColorHotlightColor}" />
                    <SolidColorBrush x:Key="BrandSecondaryBrush" Color="{ThemeResource SystemColorHighlightColor}" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!--  Global value converters  -->
            <converters:DateTimeOffsetToStringConverter x:Key="DateTimeOffsetToStringConverter" />

            <!--  Custom Color Overrides  -->
            <!--  Global FontFamily override for GeistMono  -->
            <FontFamily x:Key="ContentControlThemeFontFamily">ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono</FontFamily>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono" />
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono" />
                <Setter Property="CornerRadius" Value="0" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
                <Setter Property="FocusVisualSecondaryBrush" Value="Transparent" />
            </Style>

            <Style TargetType="NumberBox">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono" />
                <Setter Property="CornerRadius" Value="0" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="FocusVisualPrimaryBrush" Value="Transparent" />
                <Setter Property="FocusVisualSecondaryBrush" Value="Transparent" />
            </Style>

            <Style TargetType="RichTextBlock">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono" />
            </Style>

            <Style TargetType="PasswordBox">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono" />
                <Setter Property="CornerRadius" Value="0" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono" />
                <Setter Property="CornerRadius" Value="0" />
            </Style>

            <Style TargetType="ToggleButton">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono" />
                <Setter Property="CornerRadius" Value="0" />
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="CornerRadius" Value="0" />
            </Style>

            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="0" />
            </Style>

            <Style TargetType="Expander">
                <Setter Property="CornerRadius" Value="0" />
            </Style>

            <Style TargetType="ListViewItem">
                <Setter Property="CornerRadius" Value="0" />
            </Style>

            <Style TargetType="NavigationViewItem">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/Geist-VariableFont_wght.ttf#Geist" />
                <Setter Property="CornerRadius" Value="0" />
            </Style>

            <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="CaptionTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/GeistMono-VariableFont_wght.ttf#Geist Mono" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontWeight" Value="Normal" />
                <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
            </Style>

            <Style x:Key="BodyStrongTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="ms-appx:///Assets/Fonts/Geist-VariableFont_wght.ttf#Geist" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Margin" Value="0,0,0,4" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="NoHoverToggleButtonStyle" TargetType="ToggleButton">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                                <ContentPresenter
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Content="{TemplateBinding Content}" />
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="PointerOver" />
                                        <VisualState x:Name="Pressed" />
                                        <VisualState x:Name="Disabled" />
                                    </VisualStateGroup>

                                    <VisualStateGroup x:Name="CheckStates">
                                        <VisualState x:Name="Checked" />
                                        <VisualState x:Name="Unchecked" />
                                        <VisualState x:Name="Indeterminate" />
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--  Custom Expander template with our ToggleButton style  -->
            <Style x:Key="CustomExpanderStyle" TargetType="Expander">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Expander">
                            <StackPanel>
                                <ToggleButton
                                    x:Name="HeaderSite"
                                    Content="{TemplateBinding Header}"
                                    IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                    Style="{StaticResource NoHoverToggleButtonStyle}" />
                                <ContentPresenter
                                    x:Name="ExpandSite"
                                    Content="{TemplateBinding Content}"
                                    Visibility="Collapsed" />

                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="ExpansionStates">
                                        <VisualState x:Name="Collapsed" />
                                        <VisualState x:Name="Expanded">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ExpandSite" Storyboard.TargetProperty="Visibility">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </StackPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <CornerRadius x:Key="ToggleSwitchCornerRadius">0</CornerRadius>

            <!--  Change colors if you want  -->
            <SolidColorBrush x:Key="ToggleSwitchTrackFillOff" Color="DarkGray" />
            <SolidColorBrush x:Key="ToggleSwitchTrackFillOn" Color="DarkGreen" />
            <SolidColorBrush x:Key="ToggleSwitchKnobFill" Color="White" />

            <!--  Other app resources here  -->
            <SvgImageSource x:Key="PreloadedIcon" UriSource="ms-appx:///Assets/Icons/icon1.svg" />
            <SvgImageSource x:Key="ApacheLogo" UriSource="ms-appx:///Assets/Logos/apache.svg" />
            <SvgImageSource x:Key="MySqlLogo" UriSource="ms-appx:///Assets/Logos/mysql.svg" />
            <SvgImageSource x:Key="NginxLogo" UriSource="ms-appx:///Assets/Logos/nginx.svg" />
            <SvgImageSource x:Key="NodeLogo" UriSource="ms-appx:///Assets/Logos/node.svg" />
            <SvgImageSource x:Key="PhpLogo" UriSource="ms-appx:///Assets/Logos/php.svg" />
            <SvgImageSource x:Key="PhpMyAdminLogo" UriSource="ms-appx:///Assets/Logos/phpmyadmin.svg" />
            <SvgImageSource x:Key="PostgreSqlLogo" UriSource="ms-appx:///Assets/Logos/postgresql.svg" />
            <SvgImageSource x:Key="RedisLogo" UriSource="ms-appx:///Assets/Logos/redis.svg" />
            <SvgImageSource x:Key="MongoLogo" UriSource="ms-appx:///Assets/Logos/mongodb.svg" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
