                                    Visibility="{x:Bind ViewModel.PostgreSQL.Version, Converter={StaticResource ObjectToBooleanConverter}}">
                                    <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.PostgreSQL.Version, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Margin="0,16,0,0" Spacing="16">

                        <!--  Version Selection  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Version" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.PostgreSQL.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.PostgreSQL.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.PostgreSQL.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.PostgreSQL.Version, Mode=TwoWay}" />

                        </Grid>

                        <!--  PostgreSQL Configuration  -->
                        <StackPanel Spacing="12">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontWeight="SemiBold"
                                Text="PostgreSQL Configuration" />

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Auto Start" />
                                <ToggleSwitch Grid.Column="1" IsOn="{x:Bind ViewModel.PostgreSQL.AutoStart, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Log Level" />
                                <ComboBox Grid.Column="1" SelectedValue="{x:Bind ViewModel.PostgreSQL.LogLevel, Mode=TwoWay}">
                                    <ComboBoxItem Content="Debug" />
                                    <ComboBoxItem Content="Info" />
                                    <ComboBoxItem Content="Warning" />
                                    <ComboBoxItem Content="Error" />
                                    <ComboBoxItem Content="Fatal" />
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!--  Nginx Configuration  -->
                <Expander
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <Expander.Header>
                        <Grid Padding="0,12" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Service Icon  -->
                            <Border
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                Margin="0,0,16,0"
                                CornerRadius="8">
                                <Image
                                    Width="32"
                                    Height="32"
                                    Source="ms-appx:///Assets/Logos/nginx.svg" />
                            </Border>

                            <!--  Service Info  -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="Nginx" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Visibility="{x:Bind ViewModel.Nginx.Version, Converter={StaticResource ObjectToBooleanConverter}}">
                                    <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.Nginx.Version, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Margin="0,16,0,0" Spacing="16">

                        <!--  Version Selection  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Version" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.Nginx.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.Nginx.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.Nginx.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.Nginx.Version, Mode=TwoWay}" />
                        </Grid>

                        <!--  Nginx Configuration  -->
                        <StackPanel Spacing="12">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontWeight="SemiBold"
                                Text="Nginx Configuration" />

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Auto Start" />
                                <ToggleSwitch Grid.Column="1" IsOn="{x:Bind ViewModel.Nginx.AutoStart, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Log Level" />
                                <ComboBox Grid.Column="1" SelectedValue="{x:Bind ViewModel.Nginx.LogLevel, Mode=TwoWay}">
                                    <ComboBoxItem Content="Debug" />
                                    <ComboBoxItem Content="Info" />
                                    <ComboBoxItem Content="Notice" />
                                    <ComboBoxItem Content="Warning" />
                                    <ComboBoxItem Content="Error" />
                                    <ComboBoxItem Content="Critical" />
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

            </StackPanel>

            <!--  Quick Actions  -->
            <Border
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Quick Actions" />

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Content="Import Environment" />
                        <Button Content="Export Environment" />
                        <Button Content="Reset All to Defaults" />
                        <Button Content="Check for Updates" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
