<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DevNest.UI.Views.EnvironmentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="using:DevNest.UI.Components"
    xmlns:converters="using:DevNest.UI.Converters"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:DevNest.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DevNest.Core.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:CountToBooleanConverter x:Key="CountToBooleanConverter" />
        <converters:CountToPlaceholderConverter x:Key="CountToPlaceholderConverter" />
        <converters:ServiceToIconConverter x:Key="ServiceToIconConverter" />
        <converters:ServiceToVisibilityConverter x:Key="ServiceToVisibilityConverter" />
        <converters:ObjectToBooleanConverter x:Key="ObjectToBooleanConverter" />
        <converters:VersionToVisibilityConverter x:Key="VersionToVisibilityConverter" />
        <converters:NullToNoVersionConverter x:Key="NullToNoVersionConverter" />
    </Page.Resources>

    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{x:Bind ViewModel.LoadCommand}" />
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <ScrollViewer Padding="32" Background="#0b0f17">
        <StackPanel Spacing="24">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="24"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Environments" />
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Configure service versions and environment settings for your development stack" />
            </StackPanel>


            <!--  Service Environment Configurations  -->
            <StackPanel Spacing="16">

                <!--  Apache Configuration  -->
                <Expander
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Expander.Header>
                        <Grid Padding="0,12" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Service Icon  -->
                            <Border
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                Margin="0,0,16,0">
                                <Image
                                    Width="32"
                                    Height="32"
                                    Source="{StaticResource ApacheLogo}" />
                            </Border>

                            <!--  Service Info  -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Apache" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Visibility="{x:Bind ViewModel.Apache.Version, Converter={StaticResource ObjectToBooleanConverter}}">
                                    <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.Apache.Version, Converter={StaticResource NullToNoVersionConverter}, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Margin="0,16,0,0" Spacing="16">

                        <!--  Version Selection  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Version" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.Apache.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.Apache.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.Apache.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.Apache.Version, Mode=TwoWay}" />

                        </Grid>

                        <!--  Apache Configuration  -->
                        <StackPanel Spacing="12">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontWeight="SemiBold"
                                Text="Apache Configuration" />

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Port" />
                                <NumberBox
                                    Grid.Column="1"
                                    Maximum="65535"
                                    Minimum="1"
                                    PlaceholderText="80"
                                    Value="{x:Bind ViewModel.Apache.Port, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Auto Start" />
                                <ToggleSwitch Grid.Column="1" IsOn="{x:Bind ViewModel.Apache.AutoStart, Mode=TwoWay}" />
                            </Grid>

                        </StackPanel>

                        <!--  Install Version Selection  -->
                        <components:InstallVersionSelector
                            InstallCommand="{x:Bind ViewModel.InstallServiceCommand}"
                            InstallCommandParameter="Apache"
                            InstallableVersions="{x:Bind ViewModel.Apache.InstallableVersions, Mode=OneWay}"
                            InstallationStatus="{x:Bind ViewModel.ApacheInstallationStatus, Mode=OneWay}"
                            IsInstalling="{x:Bind ViewModel.IsInstallingApache, Mode=OneWay}"
                            SelectedVersion="{x:Bind ViewModel.SelectedApacheVersion, Mode=TwoWay}"
                            ShowInstallationPanel="{x:Bind ViewModel.ShowApacheInstallationPanel, Mode=OneWay}" />

                    </StackPanel>
                </Expander>

                <!--  Nginx Configuration  -->
                <Expander
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Expander.Header>
                        <Grid Padding="0,12" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Service Icon  -->
                            <Border
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                Margin="0,0,16,0">
                                <Image
                                    Width="32"
                                    Height="32"
                                    Source="{StaticResource NginxLogo}" />
                            </Border>

                            <!--  Service Info  -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Nginx" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Visibility="{x:Bind ViewModel.Nginx.Version, Converter={StaticResource ObjectToBooleanConverter}}">
                                    <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.Nginx.Version, Converter={StaticResource NullToNoVersionConverter}, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Margin="0,16,0,0" Spacing="16">

                        <!--  Version Selection  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Version" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.Nginx.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.Nginx.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.Nginx.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.Nginx.Version, Mode=TwoWay}" />
                        </Grid>

                        <!--  Install New Version  -->
                        <components:InstallVersionSelector
                            InstallCommand="{x:Bind ViewModel.InstallServiceCommand}"
                            InstallCommandParameter="Nginx"
                            InstallableVersions="{x:Bind ViewModel.Nginx.InstallableVersions, Mode=OneWay}"
                            InstallationStatus="{x:Bind ViewModel.NginxInstallationStatus, Mode=OneWay}"
                            IsInstalling="{x:Bind ViewModel.IsInstallingNginx, Mode=OneWay}"
                            SelectedVersion="{x:Bind ViewModel.SelectedNginxVersion, Mode=TwoWay}"
                            ShowInstallationPanel="{x:Bind ViewModel.ShowNginxInstallationPanel, Mode=OneWay}" />

                        <!--  Nginx Configuration  -->
                        <StackPanel Spacing="12">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontWeight="SemiBold"
                                Text="Nginx Configuration" />

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Port" />
                                <NumberBox
                                    Grid.Column="1"
                                    Maximum="65535"
                                    Minimum="1"
                                    PlaceholderText="8080"
                                    Value="{x:Bind ViewModel.Nginx.Port, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Auto Start" />
                                <ToggleSwitch Grid.Column="1" IsOn="{x:Bind ViewModel.Nginx.AutoStart, Mode=TwoWay}" />
                            </Grid>

                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!--  PHP Configuration  -->
