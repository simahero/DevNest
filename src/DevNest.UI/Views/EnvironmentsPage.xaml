                                    PlaceholderText="27017"
                                    Value="{x:Bind ViewModel.MongoDB.Port, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Auto Start" />
                                <ToggleSwitch Grid.Column="1" IsOn="{x:Bind ViewModel.MongoDB.AutoStart, Mode=TwoWay}" />
                            </Grid>

                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!--  Node.js Configuration  -->
                <Expander
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Expander.Header>
                        <Grid Padding="0,12" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Service Icon  -->
                            <Border
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                Margin="0,0,16,0">
                                <Image
                                    Width="32"
                                    Height="32"
                                    Source="{StaticResource NodeLogo}" />
                            </Border>

                            <!--  Service Info  -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Node.js" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Visibility="{x:Bind ViewModel.Node.Version, Converter={StaticResource ObjectToBooleanConverter}}">
                                    <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.Node.Version, Converter={StaticResource NullToNoVersionConverter}, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Margin="0,16,0,0" Spacing="16">

                        <!--  Version Selection  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Version" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.Node.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.Node.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.Node.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.Node.Version, Mode=TwoWay}" />

                        </Grid>

                        <!--  Install New Version  -->
                        <components:InstallVersionSelector
                            InstallCommand="{x:Bind ViewModel.InstallServiceCommand}"
                            InstallCommandParameter="Node"
                            InstallableVersions="{x:Bind ViewModel.Node.InstallableVersions, Mode=OneWay}"
                            InstallationStatus="{x:Bind ViewModel.NodeInstallationStatus, Mode=OneWay}"
                            IsInstalling="{x:Bind ViewModel.IsInstallingNode, Mode=OneWay}"
                            SelectedVersion="{x:Bind ViewModel.SelectedNodeVersion, Mode=TwoWay}"
                            ShowInstallationPanel="{x:Bind ViewModel.ShowNodeInstallationPanel, Mode=OneWay}" />

                    </StackPanel>
                </Expander>

                <!--  Redis Configuration  -->
                <Expander
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Expander.Header>
                        <Grid Padding="0,12" HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Service Icon  -->
                            <Border
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                Margin="0,0,16,0">
                                <Image
                                    Width="32"
                                    Height="32"
                                    Source="{StaticResource RedisLogo}" />
                            </Border>

                            <!--  Service Info  -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Redis" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Visibility="{x:Bind ViewModel.Redis.Version, Converter={StaticResource ObjectToBooleanConverter}}">
                                    <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.Redis.Version, Converter={StaticResource NullToNoVersionConverter}, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Margin="0,16,0,0" Spacing="16">

                        <!--  Version Selection  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Version" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.Redis.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.Redis.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.Redis.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.Redis.Version, Mode=TwoWay}" />

                        </Grid>

                        <!--  Install New Version  -->
                        <components:InstallVersionSelector
                            InstallCommand="{x:Bind ViewModel.InstallServiceCommand}"
                            InstallCommandParameter="Redis"
                            InstallableVersions="{x:Bind ViewModel.Redis.InstallableVersions, Mode=OneWay}"
                            InstallationStatus="{x:Bind ViewModel.RedisInstallationStatus, Mode=OneWay}"
                            IsInstalling="{x:Bind ViewModel.IsInstallingRedis, Mode=OneWay}"
                            SelectedVersion="{x:Bind ViewModel.SelectedRedisVersion, Mode=TwoWay}"
                            ShowInstallationPanel="{x:Bind ViewModel.ShowRedisInstallationPanel, Mode=OneWay}" />

                        <!--  Redis Configuration  -->
                        <StackPanel Spacing="12">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontWeight="SemiBold"
                                Text="Redis Configuration" />

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Port" />
                                <NumberBox
                                    Grid.Column="1"
                                    Maximum="65535"
                                    Minimum="1"
                                    PlaceholderText="6379"
                                    Value="{x:Bind ViewModel.Redis.Port, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Auto Start" />
                                <ToggleSwitch Grid.Column="1" IsOn="{x:Bind ViewModel.Redis.AutoStart, Mode=TwoWay}" />
                            </Grid>

                        </StackPanel>
                    </StackPanel>
                </Expander>

            </StackPanel>

            <!--  Quick Actions  -->
            <Border Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Quick Actions" />
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Command="{x:Bind ViewModel.OpenSettingsCommand}" Content="Open settings file" />
                        <Button Command="{x:Bind ViewModel.OpenEtcCommand}" Content="Open etc directory" />
                        <Button Content="Open service configuration" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
