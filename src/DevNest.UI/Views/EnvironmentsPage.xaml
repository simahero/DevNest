                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Visibility="{x:Bind ViewModel.Php.Version, Converter={StaticResource ObjectToBooleanConverter}}">
                                    <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.Php.Version, Converter={StaticResource NullToNoVersionConverter}, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Margin="0,16,0,0" Spacing="16">


                        <!--  Version Selection  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Version" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.Php.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.Php.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.Php.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.Php.Version, Mode=TwoWay}" />
                        </Grid>

                        <!--  Install New Version  -->
                        <components:InstallVersionSelector
                            InstallCommand="{x:Bind ViewModel.InstallServiceCommand}"
                            InstallCommandParameter="PHP"
                            InstallableVersions="{x:Bind ViewModel.Php.InstallableVersions, Mode=OneWay}"
                            InstallationStatus="{x:Bind ViewModel.PhpInstallationStatus, Mode=OneWay}"
                            IsInstalling="{x:Bind ViewModel.IsInstallingPhp, Mode=OneWay}"
                            SelectedVersion="{x:Bind ViewModel.SelectedPhpVersion, Mode=TwoWay}"
                            ShowInstallationPanel="{x:Bind ViewModel.ShowPhpInstallationPanel, Mode=OneWay}" />

                        <Button
                            Margin="0,0,12,0"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.OpenPHPIniCommand}"
                            Content="Open PHP INI" />

                        <Button
                            Margin="0,0,12,0"
                            HorizontalAlignment="Stretch"
                            Command="{x:Bind ViewModel.OpenPHPExtensionsWindowCommand}"
                            Content="Manage PHP Extensions" />

                    </StackPanel>
                </Expander>

