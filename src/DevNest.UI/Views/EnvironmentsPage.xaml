                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.MySQL.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.MySQL.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.MySQL.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.MySQL.Version, Mode=TwoWay}" />

                        </Grid>

                        <!--  Install New Version  -->
                        <components:InstallVersionSelector
                            InstallCommand="{x:Bind ViewModel.InstallServiceCommand}"
                            InstallCommandParameter="MySQL"
                            InstallableVersions="{x:Bind ViewModel.MySQL.InstallableVersions, Mode=OneWay}"
                            InstallationStatus="{x:Bind ViewModel.MysqlInstallationStatus, Mode=OneWay}"
                            IsInstalling="{x:Bind ViewModel.IsInstallingMysql, Mode=OneWay}"
                            SelectedVersion="{x:Bind ViewModel.SelectedMySQLVersion, Mode=TwoWay}"
                            ShowInstallationPanel="{x:Bind ViewModel.ShowMysqlInstallationPanel, Mode=OneWay}" />

                        <!--  MySQL Configuration  -->
                        <StackPanel Spacing="12">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontWeight="SemiBold"
                                Text="MySQL Configuration" />
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Port" />
                                <NumberBox
                                    Grid.Column="1"
                                    Maximum="65535"
                                    Minimum="1"
                                    PlaceholderText="3306"
                                    Value="{x:Bind ViewModel.MySQL.Port, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Root Password" />
                                <PasswordBox
                                    Grid.Column="1"
                                    Password="{x:Bind ViewModel.MySQL.RootPassword, Mode=TwoWay}"
                                    PlaceholderText="Enter root password" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
