                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Service Icon  -->
                            <Border
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                Margin="0,0,16,0"
                                CornerRadius="8">
                                <Image
                                    Width="32"
                                    Height="32"
                                    Source="ms-appx:///Assets/Logos/mysql.svg" />
                            </Border>

                            <!--  Service Info  -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    Style="{StaticResource BodyStrongTextBlockStyle}"
                                    Text="MySQL" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Visibility="{x:Bind ViewModel.MySQL.Version, Converter={StaticResource ObjectToBooleanConverter}}">
                                    <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.MySQL.Version, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Margin="0,16,0,0" Spacing="16">

                        <!--  Version Selection  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Version" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.MySQL.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.MySQL.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.MySQL.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.MySQL.Version, Mode=TwoWay}" />

                        </Grid>

                        <!--  MySQL Configuration  -->
                        <StackPanel Spacing="12">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontWeight="SemiBold"
                                Text="MySQL Configuration" />
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Port" />
                                <NumberBox
                                    Grid.Column="1"
                                    Maximum="65535"
                                    Minimum="1"
                                    PlaceholderText="3306"
                                    Value="{x:Bind ViewModel.MySQL.Port, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Root Password" />
                                <PasswordBox
                                    Grid.Column="1"
                                    Password="{x:Bind ViewModel.MySQL.RootPassword, Mode=TwoWay}"
                                    PlaceholderText="Enter root password" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Auto Start" />
                                <ToggleSwitch Grid.Column="1" IsOn="{x:Bind ViewModel.MySQL.AutoStart, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Log Level" />
                                <ComboBox Grid.Column="1" SelectedValue="{x:Bind ViewModel.MySQL.LogLevel, Mode=TwoWay}">
                                    <ComboBoxItem Content="Debug" />
                                    <ComboBoxItem Content="Info" />
                                    <ComboBoxItem Content="Warning" />
                                    <ComboBoxItem Content="Error" />
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Expander>

                <!--  PHP Configuration  -->
