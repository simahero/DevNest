                                ItemsSource="{x:Bind ViewModel.MySQL.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.MySQL.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
