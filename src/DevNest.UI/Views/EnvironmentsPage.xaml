                                Width="32"
                                Height="32"
                                Margin="0,0,16,0">
                                <Image
                                    Width="32"
                                    Height="32"
                                    Source="{StaticResource MongoLogo}" />
                            </Border>

                            <!--  Service Info  -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="Mongo DB" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Visibility="{x:Bind ViewModel.MongoDB.Version, Converter={StaticResource ObjectToBooleanConverter}}">
                                    <Run FontWeight="SemiBold" Text="{x:Bind ViewModel.MongoDB.Version, Converter={StaticResource NullToNoVersionConverter}, Mode=OneWay}" />
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Expander.Header>

                    <StackPanel Margin="0,16,0,0" Spacing="16">

                        <!--  Version Selection  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="Version" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Stretch"
                                IsEnabled="{x:Bind ViewModel.MongoDB.AvailableVersions.Count, Converter={StaticResource CountToBooleanConverter}, Mode=OneWay}"
                                ItemsSource="{x:Bind ViewModel.MongoDB.AvailableVersions, Mode=OneWay}"
                                PlaceholderText="{x:Bind ViewModel.MongoDB.AvailableVersions.Count, Converter={StaticResource CountToPlaceholderConverter}, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.MongoDB.Version, Mode=TwoWay}" />
                        </Grid>

                        <!--  MongoDB Configuration  -->
                        <StackPanel Spacing="12">
                            <TextBlock
                                Margin="0,0,0,8"
                                FontWeight="SemiBold"
                                Text="MongoDB Configuration" />

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Port" />
                                <NumberBox
                                    Grid.Column="1"
                                    Maximum="65535"
                                    Minimum="1"
                                    PlaceholderText="27017"
                                    Value="{x:Bind ViewModel.MongoDB.Port, Mode=TwoWay}" />
                            </Grid>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Text="Auto Start" />
                                <ToggleSwitch Grid.Column="1" IsOn="{x:Bind ViewModel.MongoDB.AutoStart, Mode=TwoWay}" />
                            </Grid>

                        </StackPanel>
                    </StackPanel>
                </Expander>
            </StackPanel>

            <!--  Quick Actions  -->
            <Border Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <StackPanel Spacing="16">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="Quick Actions" />

                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button 
                            Command="{x:Bind ViewModel.OpenSettingsCommand}"
                            Content="Open settings file" />
                        <Button Content="Export Environment" />
                        <Button Content="Reset All to Defaults" />
                        <Button Content="Check for Updates" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
