                <!--  MongoDB Configuration  -->
                <Expander
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Expander.Header>
                        <Grid Padding="0,12" HorizontalAlignment="Stretch">
