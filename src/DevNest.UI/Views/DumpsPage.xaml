<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DevNest.UI.Views.DumpsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DevNest.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:DevNest.UI.ViewModels"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Margin="12"
            Padding="16"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            CornerRadius="8">
            <StackPanel>
                <TextBlock Style="{ThemeResource TitleTextBlockStyle}" Text="VarDumper Output" />
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{ThemeResource CaptionTextBlockStyle}"
                    Text="Real-time PHP variable dumps from Symfony VarDumper" />
            </StackPanel>
        </Border>

        <!--  TreeView for dumps  -->
        <ScrollViewer Grid.Row="1" Margin="12,0,12,12">
            <TreeView x:Name="DumpsTreeView">
                <!--  TreeView content will be populated from code-behind  -->
            </TreeView>
        </ScrollViewer>
    </Grid>
</Page>
