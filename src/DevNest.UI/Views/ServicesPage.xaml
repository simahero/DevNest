<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DevNest.UI.Views.ServicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:DevNest.UI.Converters"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:DevNest.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DevNest.Core.Models"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:ObjectToBooleanConverter x:Key="ObjectToBooleanConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    </Page.Resources>

    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{x:Bind ViewModel.LoadCommand}" />
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Grid Padding="32" Background="#0b0f17">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock
                Margin="0,0,0,8"
                FontSize="24"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Services" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox
                x:Name="ServiceTypeComboBox"
                Grid.Column="0"
                Margin="0,0,12,0"
                HorizontalAlignment="Stretch"
                ItemsSource="{x:Bind ViewModel.AvailableServiceTypes, Mode=OneWay}"
                PlaceholderText="Select a service type..."
                SelectedItem="{x:Bind ViewModel.SelectedServiceType, Mode=TwoWay}" />

            <ComboBox
                x:Name="AvailableVersionsComboBox"
                Grid.Column="1"
                Margin="0,0,12,0"
                HorizontalAlignment="Stretch"
                ItemsSource="{x:Bind ViewModel.AvailableVersions, Mode=OneWay}"
                PlaceholderText="Select a version..."
                SelectedItem="{x:Bind ViewModel.SelectedVersion, Mode=TwoWay}" />

            <Button
                x:Name="InstallButton"
                Grid.Column="2"
                Command="{x:Bind ViewModel.InstallServiceCommand}"
                Content="Install"/>
        </Grid>

        <StackPanel
            x:Name="InstallationPanel"
            Grid.Row="2"
            Margin="0,0,0,24"
            Visibility="{x:Bind ViewModel.ShowInstallationPanel, Mode=OneWay}">
            <TextBlock
                x:Name="InstallationStatusText"
                Margin="0,0,0,8"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind ViewModel.InstallationStatus, Mode=OneWay}" />
            <ProgressBar
                x:Name="InstallationProgressBar"
                IsIndeterminate="True"
                Visibility="{x:Bind ViewModel.IsInstalling, Mode=OneWay}" />
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,16"
                FontSize="24"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Installed Services" />
        </StackPanel>

        <ScrollViewer Grid.Row="4">
            <ListView
                x:Name="ServicesList"
                Grid.Row="2"
                Margin="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                ItemsSource="{x:Bind ViewModel.InstalledServices, Mode=OneWay}"
                SelectionMode="None">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ServiceModel">
                        <Grid
                            Margin="0,8"
                            Padding="24,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="{x:Bind Name}" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind Path}" />
                            </StackPanel>
                            <Button
                                Grid.Column="1"
                                Padding="8"
                                Command="{Binding DataContext.OpenServiceFolderCommand, ElementName=ServicesList}"
                                CommandParameter="{Binding}">
                                <ImageIcon
                                    Width="16"
                                    Height="16"
                                    Source="ms-appx:///Assets/Icons/folder-open.svg" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <Border Grid.Row="5" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <StackPanel Spacing="16">
                <TextBlock
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Quick Actions" />
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button
                        Command="{x:Bind ViewModel.OpenServiceSettingsCommand}"
                        Content="Open service configuration" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
