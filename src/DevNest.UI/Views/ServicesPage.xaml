<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DevNest.Views.ServicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DevNest.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32" Background="#111827">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock
                Margin="0,0,0,8"
                FontSize="24"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Services" />

        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox
                x:Name="ServiceComboBox"
                Grid.Column="0"
                Margin="0,0,12,0"
                HorizontalAlignment="Stretch"
                PlaceholderText="Select a service to install..."
                SelectionChanged="ServiceComboBox_SelectionChanged" />

            <Button
                x:Name="InstallButton"
                Grid.Column="1"
                Click="InstallButton_Click"
                Content="Install"
                IsEnabled="False"
                Style="{StaticResource AccentButtonStyle}" />
        </Grid>

        <StackPanel
            x:Name="InstallationPanel"
            Grid.Row="2"
            Margin="0,0,0,24"
            Visibility="Collapsed">
            <TextBlock
                x:Name="InstallationStatusText"
                Margin="0,0,0,8"
                Style="{StaticResource CaptionTextBlockStyle}" />
            <ProgressBar
                x:Name="InstallationProgressBar"
                IsIndeterminate="True"
                Visibility="Collapsed" />
        </StackPanel>


        <ScrollViewer Grid.Row="3">
            <StackPanel x:Name="InstalledServicesPanel">
                <TextBlock
                    Margin="0,0,0,16"
                    FontSize="24"
                    Style="{StaticResource TitleTextBlockStyle}"
                    Text="Installed Services" />

                <TextBlock
                    x:Name="NoServicesText"
                    Margin="0,0,0,16"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="No services installed yet. Select a service from the dropdown above to install." />
                <StackPanel x:Name="ServicesContainer" Visibility="Collapsed">
                    <!--  Service cards will be added here dynamically  -->
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
