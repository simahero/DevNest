<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="DevNest.UI.Views.SitesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:DevNest.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:DevNest.Core.Models"
    mc:Ignorable="d">

    <i:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{x:Bind ViewModel.LoadCommand}" />
        </core:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Grid Padding="32" Background="#0b0f17">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock
                Margin="0,0,0,8"
                FontSize="24"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Sites" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox
                x:Name="SiteDefinitionComboBox"
                Grid.Column="0"
                Margin="0,0,12,0"
                HorizontalAlignment="Stretch"
                DisplayMemberPath="Name"
                ItemsSource="{x:Bind ViewModel.AppState.AvailableSites, Mode=OneWay}"
                PlaceholderText="Select site type..."
                SelectedItem="{x:Bind ViewModel.SelectedSiteDefinition, Mode=TwoWay}" />

            <TextBox
                x:Name="SiteNameTextBox"
                Grid.Column="1"
                Margin="0,0,12,0"
                HorizontalAlignment="Stretch"
                PlaceholderText="Enter site name..."
                Text="{x:Bind ViewModel.SelectedSiteName, Mode=TwoWay}" />
            <Button
                x:Name="AddSiteButton"
                Grid.Column="2"
                Command="{x:Bind ViewModel.CreateSiteCommand}"
                Content="Add Site" />
        </Grid>

        <StackPanel
            x:Name="InstallationPanel"
            Grid.Row="2"
            Margin="0,0,0,24"
            Visibility="{x:Bind ViewModel.ShowInstallationPanel, Mode=OneWay}">
            <TextBlock
                x:Name="InstallationStatusText"
                Margin="0,0,0,8"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind ViewModel.InstallationStatus, Mode=OneWay}" />
            <ProgressBar
                x:Name="InstallationProgressBar"
                IsIndeterminate="True"
                Visibility="{x:Bind ViewModel.IsInstalling, Mode=OneWay}" />
        </StackPanel>

        <ScrollViewer Grid.Row="3">
            <ListView
                x:Name="SitesList"
                Margin="0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                ItemsSource="{x:Bind ViewModel.AppState.Sites, Mode=OneWay}"
                SelectionMode="None">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:SiteModel">
                        <Grid
                            Margin="0,8"
                            Padding="24,12"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}" Text="{x:Bind Name}" />
                                <TextBlock
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Style="{StaticResource CaptionTextBlockStyle}"
                                    Text="{x:Bind Path}" />
                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    Padding="8"
                                    Command="{Binding DataContext.OpenSiteFolderCommand, ElementName=SitesList}"
                                    CommandParameter="{Binding}">
                                    <ImageIcon
                                        Width="16"
                                        Height="16"
                                        Source="ms-appx:///Assets/Icons/folder-open.svg" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Command="{Binding DataContext.OpenInVSCodeCommand, ElementName=SitesList}"
                                    CommandParameter="{Binding}">
                                    <ImageIcon
                                        Width="16"
                                        Height="16"
                                        Source="ms-appx:///Assets/Icons/vscode.svg" />
                                </Button>
                                <Button
                                    Padding="8"
                                    Command="{Binding DataContext.OpenInTerminalCommand, ElementName=SitesList}"
                                    CommandParameter="{Binding}">
                                    <ImageIcon
                                        Width="16"
                                        Height="16"
                                        Source="ms-appx:///Assets/Icons/terminal.svg" />
                                </Button>

                                <ToggleButton
                                    Padding="8"
                                    Command="{Binding DataContext.ShareWithTunnelCommand, ElementName=SitesList}"
                                    CommandParameter="{Binding}"
                                    IsChecked="{x:Bind IsSharing, Mode=OneWay}">
                                    <ImageIcon
                                        x:Name="Icon"
                                        Width="16"
                                        Height="16"
                                        Source="ms-appx:///Assets/Icons/share.svg" />
                                </ToggleButton>

                                <Button
                                    Padding="8"
                                    Command="{Binding DataContext.OpenInBrowserCommand, ElementName=SitesList}"
                                    CommandParameter="{Binding}">
                                    <ImageIcon
                                        Width="16"
                                        Height="16"
                                        Source="ms-appx:///Assets/Icons/link.svg" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
