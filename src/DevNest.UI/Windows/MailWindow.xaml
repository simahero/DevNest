<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="DevNest.UI.Windows.MailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DevNest.UI.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:DevNest.Core.Models"
    xmlns:wv2="using:Microsoft.UI.Xaml.Controls"
    x:Name="RootWindow"
    Title="Mail"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" Background="#0b0f17">
        <!--  Custom Title Bar  -->
        <Grid
            x:Name="AppTitleBar"
            Height="32"
            VerticalAlignment="Top"
            Background="#0b0f17"
            Canvas.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  App Icon and Title  -->
            <StackPanel
                Grid.Column="0"
                Margin="16,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Width="16"
                    Height="16"
                    Margin="0,0,8,0"
                    Source="../Assets/Square44x44Logo.scale-200.png" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Text="Mails" />
            </StackPanel>

            <!--  Drag Region  -->
            <Border
                x:Name="DragRegion"
                Grid.Column="1"
                Background="Transparent" />
        </Grid>

        <!--  Main Content  -->
        <Grid Margin="0,32,0,0" Background="#0b0f17">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--  Left: Email List  -->
            <ListView
                Grid.Column="0"
                Margin="0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderThickness="0"
                ItemsSource="{x:Bind ViewModel.Emails, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="vm:EmailModel">
                        <StackPanel Margin="8,4" Orientation="Vertical">
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="White"
                                Text="{x:Bind Subject}" />
                            <TextBlock
                                FontSize="12"
                                Foreground="#FFB0B0B0"
                                Text="{x:Bind From}" />

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--  Right: Details (WebView2)  -->
            <Grid Grid.Column="1" Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border
                    Grid.Row="0"
                    Margin="0,0,0,8"
                    Padding="12"
                    Background="#181f2a"
                    CornerRadius="0">
                    <StackPanel>
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{x:Bind ViewModel.SelectedEmail.Subject, Mode=OneWay}" />
                        <TextBlock
                            FontSize="14"
                            Foreground="#FFB0B0B0"
                            Text="{x:Bind ViewModel.SelectedEmail.From, Mode=OneWay}" />
                        <TextBlock
                            FontSize="14"
                            Foreground="#FFB0B0B0"
                            Text="{x:Bind ViewModel.SelectedEmail.To, Mode=OneWay}" />
                        <ItemsControl ItemsSource="{x:Bind ViewModel.SelectedEmail.Attachments, Mode=OneWay}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:EmailAttachment">
                                    <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                        <ImageIcon
                                            Width="12"
                                            Height="12"
                                            Margin="0,0,4,0"
                                            Source="ms-appx:///Assets/Icons/attachment.svg" />
                                        <HyperlinkButton
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            Command="{Binding DataContext.OpenAttachmentCommand, ElementName=RootWindow}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding FileName}"
                                            Foreground="#FFB0B0B0" />
                                        <ImageIcon
                                            Width="12"
                                            Height="12"
                                            VerticalAlignment="Center"
                                            Margin="0,0,12,0"
                                            Source="ms-appx:///Assets/Icons/document.svg" />
                                        <TextBlock
                                            Margin="0,4,12,0"
                                            Foreground="#FFB0B0B0"
                                            Text="{x:Bind ContentType}" />
                                        <TextBlock
                                            Margin="0,2,4,0"
                                            Foreground="#FFFFFF"
                                            Text="kB" />
                                        <TextBlock
                                            Margin="0,2,8,0"
                                            Foreground="#FFB0B0B0"
                                            Text="{x:Bind Size}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <wv2:WebView2
                    Name="MailWebView"
                    Grid.Row="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Source="https://outlook.live.com/" />

            </Grid>
        </Grid>
    </Grid>
</Window>
