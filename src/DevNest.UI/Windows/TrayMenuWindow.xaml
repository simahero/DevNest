<Window
    x:Class="DevNest.UI.Windows.TrayMenuWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevNest.UI"
    Title="Tray Menu">

    <Grid>

        <Grid
            x:Name="TrayTitleBar"
            Height="32"
            VerticalAlignment="Top"
            Background="#0b0f17"
            Canvas.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  App Icon and Title  -->
            <StackPanel
                Grid.Column="0"
                Margin="16,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Width="16"
                    Height="16"
                    Margin="0,0,8,0"
                    Source="Assets/Square44x44Logo.scale-200.png" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Text="DevNest" />
            </StackPanel>

            <!--  Drag Region  -->
            <Border
                x:Name="DragRegion"
                Grid.Column="1"
                Background="Transparent" />
        </Grid>

        <Border
            Padding="12"
            Background="#0b0f17"
            CornerRadius="12">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Herd Pro" />
                <Button Margin="0,0,0,4" Content="Dumps" />
                <Button Margin="0,0,0,4" Content="Mail" />
                <Button Margin="0,0,0,4" Content="Log Viewer" />
                <Button Margin="0,0,0,12" Content="Services" />
                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Quick Access" />
                <Button Margin="0,0,0,4" Content="Sites" />
                <Button Margin="0,0,0,12" Content="Create new site" />
                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Services" />
                <RadioButton Content="Use PHP 8.4" GroupName="phpver" />
                <RadioButton
                    Content="Use PHP 8.3"
                    GroupName="phpver"
                    IsChecked="True" />
                <Button Margin="0,0,0,12" Content="Open configuration files" />
                <StackPanel Orientation="Horizontal">
                    <Button
                        Width="40"
                        Height="40"
                        Content="⚙" />
                    <Button
                        Width="40"
                        Height="40"
                        Content="⭳" />
                    <Button
                        Width="40"
                        Height="40"
                        Content="⏻" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
