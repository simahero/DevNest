<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="DevNest.UI.Windows.PHPExtensionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DevNest.UI.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:DevNest.UI.ViewModels"
    Title="PHP Extensions"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" Background="#0b0f17">
        <!--  Custom Title Bar  -->
        <Grid
            x:Name="AppTitleBar"
            Height="32"
            VerticalAlignment="Top"
            Background="#0b0f17"
            Canvas.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  App Icon and Title  -->
            <StackPanel
                Grid.Column="0"
                Margin="16,0,0,0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Width="16"
                    Height="16"
                    Margin="0,0,8,0"
                    Source="../Assets/Square44x44Logo.scale-200.png" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                    Text="PHP Extensions" />
            </StackPanel>

            <!--  Drag Region  -->
            <Border
                x:Name="DragRegion"
                Grid.Column="1"
                Background="Transparent" />
        </Grid>

        <!--  Main Content  -->
        <Grid Margin="0,32,0,0" Background="#0b0f17">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock
                Grid.Row="0"
                Margin="20,20,20,10"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                Text="Manage PHP Extensions" />

            <!--  Extensions Grid  -->
            <ScrollViewer
                Grid.Row="1"
                Margin="20,0,20,20"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <GridView
                    x:Name="ExtensionsGridView"
                    ItemsSource="{x:Bind ViewModel.Extensions, Mode=OneWay}"
                    SelectionMode="None">

                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid
                                x:Name="MaxItemsWrapGrid"
                                MaximumRowsOrColumns="5"
                                Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="vm:PhpExtensionViewModel">
                            <Border
                                MinWidth="200"
                                Padding="12"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="0">
                                <StackPanel>
                                    <CheckBox
                                        Content="{x:Bind Name}"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        IsChecked="{x:Bind Enabled, Mode=TwoWay}" />
                                    <TextBlock
                                        Margin="0,4,0,0"
                                        FontSize="12"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Text="{x:Bind Comment}"
                                        TextWrapping="Wrap"
                                        Visibility="{x:Bind CommentVisibility}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </ScrollViewer>

            <!--  Action Buttons  -->
            <StackPanel
                Grid.Row="2"
                Margin="20"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="12">
                <Button
                    x:Name="CancelButton"
                    MinWidth="100"
                    Command="{x:Bind ViewModel.CancelCommand}"
                    Content="Cancel"
                    Style="{ThemeResource DefaultButtonStyle}" />
                <Button
                    x:Name="SaveButton"
                    MinWidth="100"
                    Command="{x:Bind ViewModel.SaveAndCloseCommand}"
                    Content="Save Changes"
                    Style="{ThemeResource AccentButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
