{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build and Run DevNest",
			"type": "shell",
			"command": "dotnet",
			"args": ["run"],
			"group": "build",
			"isBackground": false,
			"problemMatcher": ["$msCompile"]
		},
		{
			"label": "Publish DevNest.UI",
			"type": "shell",
			"command": "dotnet",
			"args": ["publish", "src/DevNest.UI/DevNest.UI.csproj", "-c", "Release", "--self-contained", "true", "/p:PublishSingleFile=true", "/p:IncludeAllContentForSelfExtract=true", "/p:PublishTrimmed=false"],
			"group": "build",
			"isBackground": false
		}
	]
}
